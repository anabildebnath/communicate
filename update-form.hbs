<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css"
    />
    <link
      rel="stylesheet"
      href="//cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css"
    />
    <link rel="stylesheet" href="/form.css" />
    <script
      src="//cdnjs.cloudflare.com/ajax/libs/jquery.bootstrapvalidator/0.5.0/css/bootstrapValidator.min.css"
    ></script>
    <script
      src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"
    ></script>
    <script
      src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-validator/0.4.5/js/bootstrapvalidator.min.js"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"
      type="text/javascript"
    ></script>
    <script src="form.js"></script>
  </head>

  <body>
    <div class="container">
      <form
        class="well form-horizontal"
        action="/save-distributed-book-info-class1"
        method="post"
        id="contact_form"
      >
        <fieldset>


            {{!-- Text input-first name --}}

          <div class="form-group">
            <label class="col-md-4 control-label">প্রথম নাম</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i
                    class="glyphicon glyphicon-user"
                  ></i></span>
                <input
                  name="first_name"
                  placeholder="প্রথম নাম"
                  class="form-control"
                  type="text"
                  required
                />
              </div>
            </div>
          </div>

          <!-- Text input-last নাম-->

          <div class="form-group">
            <label class="col-md-4 control-label">শেষ নাম</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i
                    class="glyphicon glyphicon-user"
                  ></i></span>
                <input
                  name="last_name"
                  placeholder="শেষ নাম"
                  class="form-control"
                  type="text"
                />
              </div>
            </div>
          </div>
          <!-- Text input-class -->

          <div class="form-group">
            <label class="col-md-4 control-label">শ্রেণী</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i
                    class="glyphicon glyphicon-user"
                  ></i></span>
                <select
                  id="color"
                  name="classNo"
                  placeholder="শ্রেণী নাম"
                  class="form-control"
                  type="select"
                >
                  <option value="" disabled selected>
                    শ্রেণী নির্বাচন করুন</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="4">5</option>

                </select>
              </div>
            </div>

          </div>

          
          <!-- Text input-subject's নাম
 -->
          <div class="form-group">
            <label class="col-md-4 control-label">বিষয়</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i
                    class="glyphicon glyphicon-book"
                  ></i></span>
                <input
                  নাম="subject"
                  placeholder="কোন বিষয়ের বই"
                  class="form-control"
                  type="text"
                />
              </div>
            </div>
          </div>

          <!-- Text input-roll -->
          <div class="form-group">
            <label class="col-md-4 control-label">রোল</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i
                    class="glyphicon glyphicon-list"
                  ></i></span>
                <input
                  name="roll"
                  placeholder="Enter student's interger roll"
                  class="form-control"
                  type="number"
                  step="1"
                  required
                />
              </div>
            </div>
          </div>


          
          <!-- Text input-father's নাম
 -->
          <div class="form-group">
            <label class="col-md-4 control-label">পিতার নাম</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i
                    class="glyphicon glyphicon-user"
                  ></i></span>
                <input
                  name="father_name"
                  placeholder="পিতার পুরো নাম এন্ট্রি করুন:"
                  class="form-control"
                  type="text"
                />
              </div>
            </div>
          </div>

          <!-- Text input-father's নাম
 -->
          <div class="form-group">
            <label class="col-md-4 control-label">মায়ের নাম</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i
                    class="glyphicon glyphicon-user"
                  ></i></span>
                <input
                  name="mother_name"
                  placeholder="মায়ের পুরো নাম এন্ট্রি করুন:"
                  class="form-control"
                  type="text"
                />
              </div>
            </div>
          </div>

          <!-- Text input-phone -->
          <div class="form-group">
            <label class="col-md-4 control-label">ফোন নম্বর</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i
                    class="glyphicon glyphicon-earphone"
                  ></i></span>
                <input
                  name="phone"
                  placeholder="(+৮৮০)১৩১৩৯৫৪৫৯৫"
                  class="form-control"
                  type="text"
                />
              </div>
            </div>
          </div>

          <!-- Text input-address-->
          <div class="form-group">
            <label class="col-md-4 control-label">ঠিকানা</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i
                    class="glyphicon glyphicon-home"
                  ></i></span>
                <input
                  name="address"
                  placeholder="ঠিকানা লিখুন"
                  class="form-control"
                  type="text"
                />
              </div>
            </div>
          </div>

          <!-- yes/no checks -->
          <div class="form-group">
            <label class="col-md-4 control-label">Has this student received
              Bangla Textbook?</label>
            <div class="col-md-4">
              <div class="radio">
                <label>
                  <input type="radio" name="bangla" value="1" />
                  Yes
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="bangla" value="0" />
                  No
                </label>
              </div>
            </div>
          </div>
          <!-- yes/no checks -->
          <div class="form-group">
            <label class="col-md-4 control-label">Has this student received
              English Textbook?</label>
            <div class="col-md-4">
              <div class="radio">
                <label>
                  <input type="radio" name="english" value="1" />
                  Yes
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="english" value="0" />
                  No
                </label>
              </div>
            </div>
          </div>
          <!-- yes/no checks -->
          <div class="form-group">
            <label class="col-md-4 control-label">Has this student received Math
              Textbook?</label>
            <div class="col-md-4">
              <div class="radio">
                <label>
                  <input type="radio" name="math" value="1" />
                  Yes
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="math" value="0" />
                  No
                </label>
              </div>
            </div>
          </div>

          <!-- yes/no checks -->
          <div class="form-group">
            <label class="col-md-4 control-label">Has this student received
              Science Textbook?</label>
            <div class="col-md-4">
              <div class="radio">
                <label>
                  <input type="radio" name="science" value="1" />
                  Yes
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="science" value="0" />
                  No
                </label>
              </div>
            </div>
          </div>
          <!-- yes/no checks -->
          <div class="form-group">
            <label class="col-md-4 control-label">Has this student received
              Bangladesh and Global studies Textbook?</label>
            <div class="col-md-4">
              <div class="radio">
                <label>
                  <input type="radio" name="social_science" value="1" />
                  Yes
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="social_science" value="0" />
                  No
                </label>
              </div>
            </div>
          </div>

          <!-- yes/no checks -->
          <div class="form-group">
            <label class="col-md-4 control-label">Religion</label>
            <div class="col-md-4">
              <div class="radio">
                <label>
                  <input type="radio" name="religion" value="1" />
                  Yes
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="religion" value="0" />
                  No
                </label>
              </div>
            </div>
          </div>

   

          <div class="form-group">
            <label class="col-md-4 control-label">তারিখ</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i
                    class="glyphicon glyphicon-calendar"
                  ></i></span>
                <input
                  নাম="date"
                  placeholder="তারিখ"
                  class="form-control"
                  type="date"
                />
              </div>
            </div>
          </div>

          <!-- Text input-book number -->
          <div class="form-group">
            <label class="col-md-4 control-label">বইয়ের সংখ্যা </label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i
                    class="glyphicon glyphicon-list-alt"
                  ></i></span>
                <input
                  নাম="book number"
                  placeholder="বইয়ের সংখ্যা"
                  class="form-control"
                  type="number"
                />
              </div>
            </div>
          </div>


          <!-- Text area-description -->
          <div class="form-group">
            <label class="col-md-4 control-label">ছাত্র/ছাত্রীর বর্ণনা</label>
            <div class="col-md-4 inputGroupContainer">
              <div class="input-group">
                <span class="input-group-addon"><i
                    class="glyphicon glyphicon-pencil"
                  ></i></span>
                <textarea
                  class="form-control"
                  name="comment"
                  placeholder="ছাত্র/ছাত্রীর বর্ণনা"
                ></textarea>
              </div>
            </div>
          </div>


          <!-- Success message -->
          {{! <div class="alert alert-success" role="alert" id="success_message">
            Success <i class="glyphicon glyphicon-thumbs-up"></i> Thanks for
            contacting us, we will get back to you shortly.
          </div> }}

          <!-- Submit Button -->
          <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4">
              <button type="submit" class="btn btn-warning">
                Submit
                <span class="glyphicon glyphicon-send"></span>
              </button>
            </div>
          </div>
        </fieldset>
      </form>

      <a href="http://localhost:4000/http://127.0.0.1:5500/main-menu.html">
        <button class="back-btn">Back</button>
      </a>

    </div>
  </body>
</html>